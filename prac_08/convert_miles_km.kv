BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: "7"
            font_size: 48
            multiline: False
            on_text: app.handle_calculate(self.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate(input_number.text)

    Label:
        text: app.output_conversion
        font_size: 48
        color: (1, 1, 0, 1)

